<div class="max-w-7xl mx-auto py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-semibold text-gray-900">Shopping Lists</h1>
    <%= link_to "New List", new_shopping_list_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>

  <% if @shopping_lists.empty? %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No shopping lists</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by creating a new shopping list.</p>
      <div class="mt-6">
        <%= link_to "New List", new_shopping_list_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
      </div>
    </div>
  <% else %>
    <!-- Google Keep style responsive grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
      <% @shopping_lists.each do |list| %>
        <div class="group bg-white border border-gray-200 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200 overflow-hidden">
          <%= link_to shopping_list_path(list), class: "block p-4" do %>
            <div class="flex justify-between items-start mb-2">
              <h3 class="text-lg font-medium text-gray-900 line-clamp-2"><%= list.name %></h3>
            </div>
            
            <div class="space-y-1">
              <% active_count = list.shopping_items.count { |i| i.state == "active" } %>
              <% completed_count = list.shopping_items.count { |i| i.state == "completed" } %>
              <% deferred_count = list.shopping_items.count { |i| i.state == "deferred" } %>
              
              <p class="text-sm text-gray-600">
                <%= pluralize(active_count, "item") %>
                <% if completed_count > 0 %>
                  <span class="text-green-600">• <%= completed_count %> completed</span>
                <% end %>
                <% if deferred_count > 0 %>
                  <span class="text-yellow-600">• <%= deferred_count %> deferred</span>
                <% end %>
              </p>
              <p class="text-xs text-gray-400">Updated <%= time_ago_in_words(list.updated_at) %> ago</p>
            </div>
          <% end %>
          
          <!-- Action buttons (visible on hover) -->
          <div class="px-4 pb-3 pt-2 border-t border-gray-100 opacity-0 group-hover:opacity-100 transition-opacity duration-200">
            <div class="flex justify-end space-x-2">
              <%= link_to edit_shopping_list_path(list), class: "text-gray-600 hover:text-gray-900", title: "Edit" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                </svg>
              <% end %>
              
              <button type="button" class="text-gray-600 hover:text-gray-900" title="Share" data-list-id="<%= list.id %>">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/>
                </svg>
              </button>
              
              <%= button_to shopping_list_path(list), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-900", title: "Delete" do %>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
